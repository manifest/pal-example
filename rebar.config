	{pal_basic, ".*", {git, "git://github.com/manifest/pal-basic.git", {tag, "v0.1.0"}}},
	{pal_google_oauth2, ".*", {git, "git://github.com/manifest/pal-google-oauth2.git", {tag, "v0.1.0"}}},
